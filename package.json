{
	"name": "sailkit",
	"version": "0.1.10",
	"description": "SailKit is an open-source toolkit for composing responsive email templates in SvelteKit applications.",
	"author": "Noam Shemesh <https://github.com/n00ki>",
	"main": "./dist/index.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/n00ki/sailkit.git"
	},
	"homepage": "https://sailkit.xyz",
	"keywords": [
		"sveltekit",
		"svelte",
		"email",
		"mjml"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "pnpm test:unit"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"mjml": "^4.0.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/html-minifier-terser": "^7.0.2",
		"@types/html-to-text": "^9.0.4",
		"@types/mjml": "^4.7.4",
		"@types/pretty": "^2.0.3",
		"csstype": "^3.1.3",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"mjml": "^4.15.3",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.2",
		"svelte-check": "^4.1.4",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.0.7",
		"vitest": "^3.0.2"
	},
	"dependencies": {
		"html-minifier-terser": "^7.2.0",
		"html-to-text": "^9.0.5",
		"pretty": "^2.0.0"
	},
	"license": "MIT"
}
