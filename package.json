{
  "name": "sailkit",
  "version": "0.2.3",
  "description": "SailKit is an open-source toolkit for composing responsive email templates in SvelteKit applications.",
  "author": "Noam Shemesh <https://github.com/n00ki>",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n00ki/sailkit.git"
  },
  "homepage": "https://sailkit.xyz",
  "keywords": [
    "sveltekit",
    "svelte",
    "email",
    "mjml"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && pnpm package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "pnpm package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write . && pnpm docs:format",
    "lint": "prettier --check . && eslint . && pnpm docs:lint",
    "test:unit": "vitest",
    "test": "pnpm test:unit",
    "docs:dev": "pnpm --filter ./docs dev",
    "docs:build": "pnpm --filter ./docs build",
    "docs:preview": "pnpm --filter ./docs preview",
    "docs:lint": "pnpm --filter ./docs lint",
    "docs:format": "pnpm --filter ./docs format"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "mjml": "^4.0.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.8",
    "@eslint/js": "^9.25.1",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.20.7",
    "@sveltejs/package": "^2.3.11",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/html-to-text": "^9.0.4",
    "@types/mjml": "^4.7.4",
    "@types/node": "^22.15.2",
    "@types/pretty": "^2.0.3",
    "csstype": "^3.1.3",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-svelte": "^3.5.1",
    "globals": "^16.0.0",
    "mjml": "^4.15.3",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "publint": "^0.3.12",
    "svelte-check": "^4.1.6",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0",
    "vite": "^6.3.3",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "html-minifier-terser": "^7.2.0",
    "html-to-text": "^9.0.5",
    "pretty": "^2.0.0"
  },
  "license": "MIT"
}
